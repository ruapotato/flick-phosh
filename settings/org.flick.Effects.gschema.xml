<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.flick.Effects" path="/org/flick/effects/">
    <key name="touch-effect-enabled" type="b">
      <default>true</default>
      <summary>Enable touch effects</summary>
      <description>Show ripple effects when touching the screen</description>
    </key>
    <key name="touch-effect-style" type="i">
      <default>3</default>
      <summary>Touch effect style</summary>
      <description>0=water, 1=snow, 2=crt, 3=terminal</description>
    </key>
    <key name="ripple-size" type="d">
      <default>0.30</default>
      <summary>Ripple size</summary>
      <description>Size of ripple relative to screen</description>
    </key>
    <key name="ripple-duration" type="d">
      <default>0.5</default>
      <summary>Ripple duration</summary>
      <description>How long ripples last in seconds</description>
    </key>
    <key name="living-pixels-enabled" type="b">
      <default>true</default>
      <summary>Enable living pixels</summary>
      <description>Show ambient effects like stars and fireflies</description>
    </key>
    <key name="stars-enabled" type="b">
      <default>true</default>
      <summary>Show stars</summary>
    </key>
    <key name="shooting-stars-enabled" type="b">
      <default>true</default>
      <summary>Show shooting stars</summary>
    </key>
    <key name="fireflies-enabled" type="b">
      <default>true</default>
      <summary>Show fireflies</summary>
    </key>
    <key name="dust-enabled" type="b">
      <default>true</default>
      <summary>Show dust particles</summary>
    </key>
    <key name="shimmer-enabled" type="b">
      <default>true</default>
      <summary>Show shimmer effects</summary>
    </key>
  </schema>
</schemalist>
